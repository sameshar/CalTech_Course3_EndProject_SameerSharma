// script.js
document.getElementById("bookCabBtn").addEventListener("click", function() {
    document.getElementById("bookCabForm").style.display = "block";
    document.getElementById("customerPortalForm").style.display = "none";
});

document.getElementById("customerPortalBtn").addEventListener("click", function() {
    document.getElementById("customerPortalForm").style.display = "block";
    document.getElementById("bookCabForm").style.display = "none";
	});
	
document.getElementById("customerCreateBtn").addEventListener("click", function() {
    document.getElementById("customerCreateForm").style.display = "block";
    document.getElementById("customerUpdateForm").style.display = "none";
	document.getElementById("customerViewForm").style.display = "none";
	});
		
document.getElementById("customerPortalBtn").addEventListener("click", function() {
	document.getElementById("customerCreateForm").style.display = "none";
	document.getElementById("customerUpdateForm").style.display = "block";
	document.getElementById("customerViewForm").style.display = "none";
	});
		
document.getElementById("customerPortalBtn").addEventListener("click", function() {
	document.getElementById("customerCreateForm").style.display = "block";
	document.getElementById("customerUpdateForm").style.display = "none";
	document.getElementById("customerViewForm").style.display = "none";
	});