package com.BookingMyCabBuddy.controller;

import java.awt.PageAttributes.MediaType;

import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.BookingMyCabBuddy.bean.Customer;

@RestController
public class BookingController {

	@RequestMapping(value = "/index")
	public String bookACab() {
		return "index";
	}
	
	@PostMapping(value = "/create", consumes = org.springframework.http.MediaType.APPLICATION_JSON_VALUE)
	public String createCustomer(Customer customer) {
		customer.setCustomerName(customer.getCustomerName());
		System.out.println(customer.toString());
		return "Customer information recieved";
	}
	
}
